<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CountDown</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn3.devexpress.com/jslib/24.1.4/css/dx.light.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

    @Styles.Render("~/Content/style.css")
</head>
<body>
    <navbar class="mt-5">
        <h1 class="text-center">CountDown Tool</h1>
    </navbar>
    @RenderBody()

    <footer>
    </footer>

    <!-- jQuery ilk olarak yerel kaynaklardan yüklenir -->
    @Scripts.Render("~/bundles/jquery")

    <!-- Diğer gerekli kütüphaneler -->
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Content/script.js")

    <!-- CDN üzerinden yüklenen jQuery (yerel kaynaklar önceliklidir) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- DevExtreme -->
    @*<script type="text/javascript" src="https://cdn3.devexpress.com/jslib/24.1.4/js/dx.all.js"></script>*@

    <!-- jQuery Countdown -->
    <script src="https://cdn.jsdelivr.net/npm/jquery-countdown@2.2.0/dist/jquery.countdown.min.js"></script>

    <!-- Yerel script dosyası -->
    <script src="~/Content/util.js"></script>
    <script src="~/Content/dx.all.js"></script>


    @RenderSection("scripts", required: false)
</body>
</html>
