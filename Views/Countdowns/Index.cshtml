
@model IEnumerable<CountDown.Entities.Countdown>
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<main>
    <div class="container">
        <div class="create-countdown">
            <div class="input-group d-flex">
                <div class="row mb-3">

                    <div class="col-md-12">
                        <h5>Countdown Title</h5>
                        <div id="dateBox"></div>
                    </div>


                </div>
                <div class="row mb-3">
                    <div class="col-md-12">
                        <h5>Countdown Title</h5>
                        <div id="textBoxContainer"></div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <button class="btn btn-success btn-sm" onclick="AddCountdown()" id="save">Save</button>
                </div>
            </div>
        </div>





        <div class="row mt-3" id="countdowns">
            <h4>Countdowns</h4>

        </div>

    </div>


    @if (Request.IsAuthenticated)
    {
        <div class="container mt-5">
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a id="logoutBtn" class="btn btn-danger btn-sm" href="#" data-logout-url="@Url.Action("Logout", "Account")">Logout</a>
                </li>
            </ul>
        </div>
    }


</main>






